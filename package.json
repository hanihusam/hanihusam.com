{
  "name": "hanihusam.com",
  "version": "1.3.0",
  "engines": {
    "node": "20"
  },
  "type": "module",
  "sideEffects": false,
  "description": "A source code of hanihusam.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hanihusam/hanihusam.com.git"
  },
  "keywords": [],
  "author": "Hani Husamuddin <hi@hanihusam.com> (https://hanihusam.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hanihusam/hanihusam.com/issues"
  },
  "homepage": "https://github.com/hanihusam/hanihusam.com#readme",
  "scripts": {
    "build": "run-s build:*",
    "build:rr": "react-router build",
    "build:info": "node ./other/build-info.js",
    "build:server": "esbuild --target=es2022 --platform=node --format=esm ./server/index.ts --outfile=build/server.js",
    "dev": "run-p dev:*",
    "dev:build": "cross-env NODE_ENV=development bun run build:server -- --watch",
    "dev:content": "tsx -r esbuild-register -r dotenv/config other/refresh-on-content-change.ts",
    "dev:app": "node ./server/dev-server.js",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "react-router-serve ./build/server.js",
    "curl:blog": "curl --HEAD --silent http://localhost:$PORT/blog > /dev/null || true",
    "prime-cache:prod": "cross-env PORT=4001 npx start-server-and-test start http-get://localhost:4001/build/info.json curl:blog && echo cache primed ⚡️",
    "prime-cache:mocks": "cross-env PORT=4001 npx start-server-and-test start:mocks http-get://localhost:4001/build/info.json curl:blog && echo cache primed ⚡️",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "bun run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "lint": "eslint --ignore-pattern .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "bun run lint --fix && bun run format",
    "lint:strict": "eslint --max-warnings=0 src",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)\"",
    "typecheck": "react-router typegen && tsc",
    "validate": "./other/validate"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@cld-apis/types": "^0.1.6",
    "@epic-web/cachified": "^5.2.0",
    "@epic-web/config": "^1.16.5",
    "@epic-web/invariant": "^1.0.0",
    "@epic-web/remember": "^1.1.0",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@octokit/plugin-throttling": "^9.4.0",
    "@octokit/rest": "^21.1.0",
    "@prisma/client": "^6.3.1",
    "@reach/checkbox": "^0.18.0",
    "@react-router/fs-routes": "^7.5.3",
    "@react-router/node": "^7.5.3",
    "@react-router/serve": "^7.5.3",
    "better-sqlite3": "^11.9.1",
    "chokidar": "^4.0.3",
    "cloudinary-build-url": "^0.2.4",
    "clsx": "^2.1.1",
    "compression": "^1.7.5",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "esbuild": "^0.24.2",
    "execa": "^9.5.2",
    "express": "^4.21.2",
    "framer-motion": "^12.3.0",
    "gray-matter": "^4.0.3",
    "isbot": "^5.1.22",
    "litefs-js": "^1.1.2",
    "lodash.throttle": "^4.1.1",
    "lru-cache": "^11.0.2",
    "match-sorter": "^8.0.0",
    "mdast-util-mdx-jsx": "^3.2.0",
    "mdx-bundler": "^10.0.3",
    "morgan": "^1.10.0",
    "p-queue": "^8.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.0.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-pretty-code": "^0.14.0",
    "rehype-prism-plus": "^2.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "shiki": "^2.3.1",
    "source-map-support": "^0.5.21",
    "tailwind-merge": "^3.0.1",
    "unist-util-visit": "^5.0.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@faker-js/faker": "^9.4.0",
    "@react-router/dev": "^7.5.3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/lodash.throttle": "^4.1.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.19.75",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/source-map-support": "^0.5.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/utils": "^8.23.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-c8": "^0.33.0",
    "autoprefixer": "^10.4.20",
    "esbuild-register": "^3.6.0",
    "eslint": "^9.19.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "happy-dom": "^16.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "msw": "^2.7.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.3.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-env-only": "^3.0.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "prettier": "@epic-web/config/prettier",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier -w"
    ],
    "*.{json,css,scss,md,mdx}": [
      "prettier -w"
    ]
  }
}
